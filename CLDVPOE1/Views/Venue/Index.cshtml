@model IEnumerable<CLDVPOE1.Models.Venue>

@{
    ViewData["Title"] = "Venue Information";
}

<h1>Index</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
				@Html.DisplayNameFor(model => model.VenueId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            
            <th>Venue Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
					@Html.DisplayFor(modelItem => item.VenueId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="@item.ImageURL" alt="Venue Image" width="150" height="150" style="object-fit:cover; border-radius:8px;" />
                    }
                    else
                    {
						<span>No Image Available</span>
                    }
                    <td> 
                 <a asp-action="Edit" asp-route-id="@item.VenueId">Edit</a> 
                 <a asp-action="Details" asp-route-id="@item.VenueId">Details</a> 
                 <a asp-action="Delete" asp-route-id="@item.VenueId">Delete</a>
             </td> 
        </tr>
}
    </tbody>
</table>
